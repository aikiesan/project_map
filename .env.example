# CP2B Maps V2 - Environment Variables Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# ============================================================================
# Google Gemini API Configuration (for Bagacinho AI Assistant)
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# ============================================================================
# Application Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
CP2B_LOG_LEVEL=INFO

# Application environment: development, production
CP2B_ENV=development

# ============================================================================
# Database Configuration (if using external database)
# ============================================================================
# Leave empty to use default local SQLite database
# DB_HOST=
# DB_PORT=
# DB_NAME=
# DB_USER=
# DB_PASSWORD=

# ============================================================================
# Streamlit Configuration
# ============================================================================
# These can override .streamlit/config.toml settings
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=localhost
# STREAMLIT_SERVER_HEADLESS=true

# ============================================================================
# Performance Tuning (Optional)
# ============================================================================
# Maximum raster size for MapBiomas processing (pixels)
# MAX_RASTER_SIZE=1536

# Cache TTL in seconds (default: 3600 = 1 hour)
# CACHE_TTL=3600

# Maximum municipalities to display on map
# MAX_MUNICIPALITIES=50

# ============================================================================
# Feature Flags (Optional)
# ============================================================================
# Enable/disable specific features
# ENABLE_AI_ASSISTANT=true
# ENABLE_RASTER_ANALYSIS=true
# ENABLE_PROXIMITY_ANALYSIS=true

# ============================================================================
# Analytics and Monitoring (Optional)
# ============================================================================
# ANALYTICS_ENABLED=false
# SENTRY_DSN=

# ============================================================================
# Security (Optional)
# ============================================================================
# Secret key for session management
# SECRET_KEY=your_secret_key_here

# ============================================================================
# Notes
# ============================================================================
# - All variables are optional unless specified as required
# - GEMINI_API_KEY is required for Bagacinho AI Assistant functionality
# - Default values are used if environment variables are not set
# - See config/settings.py for default configuration values
